<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="basicType">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="defaultStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="fillingSpace" parent="defaultStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="columnStyle" parent="defaultStyle">
        <item name="android:layout_width">110dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="columnDexStyle" parent="columnStyle">
        <item name="android:layout_width">150dp</item>
    </style>

    <style name="statStyle" parent="defaultStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="statValueStyle" parent="defaultStyle">
        <item name="android:layout_width">35dp</item>
    </style>

    <style name="statMaxStyle" parent="statValueStyle">
        <item name="android:gravity">right</item>
    </style>

    <style name="graphStyle" parent="defaultStyle">
        <item name="android:padding">4dp</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="graphAccentStyle" parent="graphStyle">
        <item name="android:layout_weight">10</item>
    </style>

</resources>