<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:background="@drawable/bg">

            <ImageView
                android:id="@+id/imgSugimoriArt"
                android:layout_height="250dp"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:contentDescription="@string/imgSugimoriDesc"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/boxSprite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:background="@drawable/bg">

            <TextView
                android:id="@+id/txtSprite"
                android:text="@string/txtSprite"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space style="@style/fillingSpace"/>

                <ImageView
                    android:id="@+id/imgFront"
                    android:layout_height="90dp"
                    android:layout_width="90dp"
                    android:contentDescription="@string/imgSpriteDesc"/>

                <Space style="@style/fillingSpace"/>

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_height="90dp"
                    android:layout_width="90dp"
                    android:contentDescription="@string/imgSpriteDesc"/>

                <Space style="@style/fillingSpace"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtSpriteFemale"
                android:text="@string/txtSprite2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/boxFemale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <Space style="@style/fillingSpace"/>

                <ImageView
                    android:id="@+id/imgFront2"
                    android:layout_height="90dp"
                    android:layout_width="90dp"
                    android:contentDescription="@string/imgSpriteDesc"/>

                <Space style="@style/fillingSpace"/>

                <ImageView
                    android:id="@+id/imgBack2"
                    android:layout_height="90dp"
                    android:layout_width="90dp"
                    android:contentDescription="@string/imgSpriteDesc"/>

                <Space style="@style/fillingSpace"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtTap"
                android:text="@string/txtTap"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/boxNationalID"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/lblNationalID"
                style="@style/columnDexStyle"
                android:text="@string/nationalID"/>

            <TextView
                android:id="@+id/txtNationalID"
                style="@style/defaultStyle"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/boxDexNumber"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/txtPokemonDescription"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/bg"
            android:layout_marginBottom="5dp"
            android:lineSpacingExtra="4dp"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/lblJapaneseName"
                style="@style/columnStyle"
                android:text="@string/japanese"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/txtJapaneseName"
                style="@style/defaultStyle"
                android:layout_toRightOf="@id/lblJapaneseName"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/lblSpecies"
                style="@style/columnStyle"
                android:text="@string/species"
                android:layout_below="@id/txtJapaneseName"/>

            <TextView
                android:id="@+id/txtSpecies"
                style="@style/defaultStyle"
                android:layout_toRightOf="@id/lblSpecies"
                android:layout_below="@id/txtJapaneseName"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/lblHabitat"
                style="@style/columnStyle"
                android:text="@string/habitat"
                android:layout_below="@id/txtSpecies"/>

            <TextView
                android:id="@+id/txtHabitat"
                style="@style/defaultStyle"
                android:layout_toRightOf="@id/lblHabitat"
                android:layout_below="@id/txtSpecies"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/lblType"
                style="@style/columnStyle"
                android:text="@string/type"
                android:layout_below="@id/txtHabitat"/>

            <TextView
                android:id="@+id/txtPokemonType1"
                android:layout_width="50dp"
                android:layout_height="20dp"
                style="@style/basicType"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/lblType"
                android:layout_below="@id/txtHabitat"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/txtPokemonType2"
                android:layout_width="50dp"
                android:layout_height="20dp"
                style="@style/basicType"
                android:layout_toRightOf="@id/txtPokemonType1"
                android:layout_below="@id/txtHabitat"/>

            <TextView
                android:id="@+id/lblHeight"
                style="@style/columnStyle"
                android:text="@string/height"
                android:layout_below="@id/txtPokemonType1"/>

            <TextView
                android:id="@+id/txtHeight"
                style="@style/defaultStyle"
                android:layout_toRightOf="@id/lblHeight"
                android:layout_below="@id/txtPokemonType1"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/lblWeight"
                style="@style/columnStyle"
                android:text="@string/weight"
                android:layout_below="@id/txtHeight"/>

            <TextView
                android:id="@+id/txtWeight"
                style="@style/defaultStyle"
                android:layout_toRightOf="@id/lblWeight"
                android:layout_below="@id/txtHeight"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/lblShape"
                style="@style/columnStyle"
                android:text="@string/shape"
                android:layout_below="@id/txtWeight"/>

            <TextView
                android:id="@+id/txtShape"
                style="@style/defaultStyle"
                android:layout_toRightOf="@id/lblShape"
                android:layout_below="@id/txtWeight"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/lblGender"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                style="@style/columnStyle"
                android:text="@string/gender"/>

            <TextView
                android:id="@+id/txtGender"
                style="@style/defaultStyle"
                android:layout_toRightOf="@id/lblGender"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/lblEgg"
                style="@style/columnStyle"
                android:text="@string/egg"
                android:layout_below="@id/txtGender"/>

            <TextView
                android:id="@+id/txtEgg"
                style="@style/defaultStyle"
                android:layout_toRightOf="@id/lblEgg"
                android:layout_below="@id/txtGender"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/lblHatch"
                style="@style/columnStyle"
                android:text="@string/hatch"
                android:layout_below="@id/txtEgg"/>

            <TextView
                android:id="@+id/txtHatch"
                style="@style/defaultStyle"
                android:layout_toRightOf="@id/lblHatch"
                android:layout_below="@id/txtEgg"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/lblGrowth"
                style="@style/columnStyle"
                android:text="@string/growth"
                android:layout_below="@id/txtHatch"/>

            <TextView
                android:id="@+id/txtGrowth"
                style="@style/defaultStyle"
                android:layout_toRightOf="@id/lblGrowth"
                android:layout_below="@id/txtHatch"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/lblCapture"
                style="@style/columnStyle"
                android:text="@string/capture"
                android:layout_below="@id/txtGrowth"/>

            <TextView
                android:id="@+id/txtCapture"
                style="@style/defaultStyle"
                android:layout_toRightOf="@id/lblCapture"
                android:layout_below="@id/txtGrowth"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/boxAbility"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"
            android:layout_marginBottom="5dp"/>

        <RelativeLayout
            style="@style/defaultStyle"
            android:background="@drawable/bg"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/lblBaseEXP"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                style="@style/columnStyle"
                android:text="@string/baseEXP"/>

            <TextView
                android:id="@+id/txtBaseEXP"
                style="@style/defaultStyle"
                android:layout_toRightOf="@id/lblBaseEXP"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/lblBaseEffort"
                style="@style/columnStyle"
                android:text="@string/baseEffort"
                android:layout_below="@id/txtBaseEXP"/>

            <TextView
                android:id="@+id/txtBaseEffort"
                style="@style/defaultStyle"
                android:layout_toRightOf="@id/lblBaseEffort"
                android:layout_below="@id/txtBaseEXP"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/lblBaseHappiness"
                style="@style/columnStyle"
                android:text="@string/baseHappiness"
                android:layout_below="@id/txtBaseEffort"/>

            <TextView
                android:id="@+id/txtBaseHappiness"
                style="@style/defaultStyle"
                android:layout_toRightOf="@id/lblBaseHappiness"
                android:layout_below="@id/txtBaseEffort"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/boxStat"
            style="@style/defaultStyle"
            android:background="@drawable/bg"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <TextView
                style="@style/defaultStyle"
                android:text="@string/baseStat"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/boxTypeEfficacy"
            style="@style/defaultStyle"
            android:background="@drawable/bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblTypeEfficacy"
                style="@style/defaultStyle"
                android:text="@string/txtEfficacy"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                style="@style/defaultStyle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblTypeEffectife"
                    style="@style/fillingSpace"
                    android:gravity="center"
                    android:text="@string/strong"/>

                <TextView
                    android:id="@+id/lblTypeImmune"
                    style="@style/fillingSpace"
                    android:gravity="center"
                    android:text="@string/immune"/>

                <TextView
                    android:id="@+id/lblTypeNotEffective"
                    style="@style/fillingSpace"
                    android:gravity="center"
                    android:text="@string/weak"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/boxOffence"
                style="@style/defaultStyle"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/boxOffenceStrong"
                    style="@style/fillingSpace"
                    android:orientation="vertical"
                    android:paddingRight="2dp"/>

                <LinearLayout
                    android:id="@+id/boxOffenceImmune"
                    style="@style/fillingSpace"
                    android:orientation="vertical"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"/>

                <LinearLayout
                    android:id="@+id/boxOffenceWeak"
                    style="@style/fillingSpace"
                    android:orientation="vertical"
                    android:paddingLeft="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/boxDefence"
                style="@style/defaultStyle"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/boxDefenceStrong"
                    style="@style/fillingSpace"
                    android:orientation="vertical"
                    android:paddingRight="2dp"/>

                <LinearLayout
                    android:id="@+id/boxDefenceImmune"
                    style="@style/fillingSpace"
                    android:orientation="vertical"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"/>

                <LinearLayout
                    android:id="@+id/boxDefenceWeak"
                    style="@style/fillingSpace"
                    android:orientation="vertical"
                    android:paddingLeft="2dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lblTapEfficacy"
                style="@style/defaultStyle"
                android:text="@string/txtTapEfficacy"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>