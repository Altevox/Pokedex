<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rowMove"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtMoveLevel"
            style="@style/statStyle"
            android:layout_marginRight="6dp" />

        <TextView
            android:id="@+id/txtMoveName"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/txtMovePower"
            style="@style/statStyle"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:layout_marginRight="0dp" />

        <TextView
            android:id="@+id/txtMoveAccuracy"
            style="@style/statStyle"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:layout_marginRight="6dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtMoveType"
            android:layout_width="50dp"
            android:layout_height="20dp"
            style="@style/basicType" />
        <TextView
            android:id="@+id/txtMoveCategory"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:paddingTop="1dp"
            style="@style/basicType" />
    </LinearLayout>

    </LinearLayout>
